<Window x:Class="XWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="pbtn" Content="Persons" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="90" Width="800" Click="pbtn_Click"/>
        <Button x:Name="obtn" Content="Officers" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" Height="81" Width="800" Click="obtn_Click"/>
        <Button x:Name="tbtn" Content="Trials" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Height="82" Width="800" Click="tbtn_Click"/>

    </Grid>
</Window>
